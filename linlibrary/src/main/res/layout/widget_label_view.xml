<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">

    <TextView
        android:id="@+id/label_title_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/middle"
        android:layout_marginRight="@dimen/middle"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_middle"
        tools:text="标题"/>

    <TextView
        android:id="@+id/label_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/label_title_tv"
        android:layout_toLeftOf="@+id/label_content_iv"
        android:layout_toRightOf="@id/label_title_tv"
        android:layout_toStartOf="@id/label_content_iv"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_middle"
        android:visibility="gone"
        tools:text="@string/app_name"/>

    <EditText
        android:id="@+id/label_content_et"
        style="@style/BaseEditText"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/label_title_tv"
        android:background="@null"
        android:singleLine="true"
        android:textSize="@dimen/font_middle"
        tools:text="@string/app_name"/>

    <ImageView
        android:id="@id/label_content_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/middle"
        android:layout_marginRight="@dimen/middle"
        android:visibility="gone"
        />

</RelativeLayout>