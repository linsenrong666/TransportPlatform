<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="@dimen/middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/middle"
        android:orientation="vertical"
        android:paddingBottom="@dimen/middle">

        <Button
            android:id="@+id/dialog_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_default_view_selector"
            android:text="打开相机"
            android:textSize="@dimen/font_middle"/>

        <Button
            android:id="@+id/dialog_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_default_view_selector"
            android:text="打开相册"
            android:textSize="@dimen/font_middle"/>

        <Button
            android:id="@+id/dialog_take_photo_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:background="@drawable/bg_default_view_selector"
            android:text="@string/cancel"
            android:textSize="@dimen/font_middle"/>
    </LinearLayout>
</FrameLayout>