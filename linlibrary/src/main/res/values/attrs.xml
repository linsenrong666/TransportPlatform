<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LabelView">
        <attr name="title_text" format="string"/>
        <attr name="content_text" format="string"/>
        <attr name="content_image" format="reference"/>
        <attr name="show_edit_text" format="boolean"/>
        <attr name="hint_text" format="string"/>
        <attr name="title_text_size" format="dimension"/>
        <attr name="content_edit_size" format="dimension"/>
        <attr name="content_text_size" format="dimension"/>
        <attr name="edit_input_type" format="integer"/>
    </declare-styleable>


    <declare-styleable name="BGASwipeItemLayout">
        <attr name="bga_sil_swipeDirection" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="bga_sil_bottomMode" format="enum">
            <enum name="pullOut" value="0"/>
            <enum name="layDown" value="1"/>
        </attr>
        <attr name="bga_sil_springDistance" format="dimension"/>
        <attr name="bga_sil_swipeAble" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="TitleView">
        <attr name="titleString" format="string"/>
        <attr name="showLeft" format="boolean"/>
    </declare-styleable>

</resources>